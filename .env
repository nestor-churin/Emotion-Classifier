# Налаштування сервера
HOST=0.0.0.0
PORT=26000
DEBUG=true

# Шляхи до файлів
DATASET_PATH=ukr_emotions_dataset
DATABASE_PATH=emotions.db

# Налаштування моделі
MODEL_TYPE=sklearn
MODEL_NAME=ukr-emotion-classifier
MAX_TEXT_LENGTH=512
MIN_TEXT_LENGTH=5
BATCH_SIZE=32

# Налаштування обробки тексту
LANGUAGE=uk

# Налаштування кешування
CACHE_ENABLED=true
CACHE_TTL=3600

# Налаштування логування
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Налаштування безпеки
API_KEY=
RATE_LIMIT=100

# Налаштування для розробки
SAVE_PREDICTIONS=true
ENABLE_METRICS=true

# Налаштування бази даних
DB_POOL_SIZE=10
DB_TIMEOUT=30
